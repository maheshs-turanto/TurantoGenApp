@model GeneratorBase.MVC.Models.UserDefinePages
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>
    <div class="content-heading">
        <div class="col-lg-10">
            <strong>
                UserDefinePages
                <small>Delete</small>
            </strong>
        </div>
        <div class="col-lg-2">
        </div>
    </div>
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="card AppForm">
                    <div class="card-header text-white bg-danger clearfix">
                        <h6>Are you sure you want to delete this? - <strong>@Html.DisplayFor(model => model.PageName)</strong> </h6>
                    </div>
                    <div class="card-body">
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.PageName)
                            </dt>
                            <dd class="clearfix">
                                @Html.DisplayFor(model => model.PageName)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.PageContent)
                            </dt>
                            <dd class="clearfix">
                                @Html.DisplayFor(model => model.PageContent)
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
    </div>

</body>
</html>
