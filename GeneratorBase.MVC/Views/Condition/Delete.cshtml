@model GeneratorBase.MVC.Models.Condition
@{
    ViewBag.Title = "Delete Condition";
}
<div class="content-heading">
    <div class="col-lg-10">
        <strong>
            Delete Condition
        </strong>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="card card-default AppForm">
                <div class="card-header text-white bg-danger clearfix">
                    <h6>Are you sure you want to delete this? - <strong>@Html.DisplayFor(model => model.PropertyName)</strong> </h6>
                </div>
                <div class="card-body">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.PropertyName)
                        </dt>
                        <dd class="clearfix">
                            @Html.DisplayFor(model => model.PropertyName)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Operator)
                        </dt>
                        <dd class="clearfix">
                            @Html.DisplayFor(model => model.Operator)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Value)
                        </dt>
                        <dd class="clearfix">
                            @Html.DisplayFor(model => model.Value)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.LogicalConnector)
                        </dt>
                        <dd class="clearfix">
                            @Html.DisplayFor(model => model.LogicalConnector)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.RuleConditionsID)
                        </dt>
                        <dd class="clearfix">
                            @Html.DisplayFor(model => model.ruleconditions.DisplayValue)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
    <br />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                @Html.ActionLink("Back to List", "Edit", "BusinessRule", new { Id = Model.RuleConditionsID }, new { @class = "btn btn-default btn-sm" })
                <input type="submit" value="Delete" class="btn btn-primary btn-sm" />
            </div>
        </div>
    }
</div>

