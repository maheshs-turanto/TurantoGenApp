 <div class="form-group col-6 float-left">
		<label class="font-weight-bold truncate1">@Html.LabelFor(model => model.T_MenuItemID)</label>
 @if (Model.t_menuitem!=null && !string.IsNullOrEmpty(Model.t_menuitem.DisplayValue))
        {
		 <p class="truncate1" id="lblT_MenuItem">
				@Html.ActionLink(HttpUtility.HtmlDecode(Html.DisplayFor(model => model.t_menuitem.DisplayValue).ToString()), "Details", "T_MenuItem", new { Id = Html.DisplayFor(model => model.t_menuitem.Id).ToString() }, null)
