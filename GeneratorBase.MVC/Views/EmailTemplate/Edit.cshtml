@model GeneratorBase.MVC.Models.EmailTemplate
@{
    ViewBag.Title = "Edit Email Template";
}

<div class="content-heading">
    <div class="col-lg-12">
        <strong>
             Email Template
           <small> <i class="glyphicon glyphicon-save text-primary"></i>   <i class="glyphicon glyphicon-chevron-right small"></i> <span> Edit </span></small>
         </strong>
</div>
    <!-- /.col-lg-12 -->
</div>
@using (Html.BeginForm("Edit", "EmailTemplate", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken();
                            Html.ValidationSummary(true);
                            Html.EnableClientValidation();
                            @Html.HiddenFor(model => model.Id)
                            @Html.HiddenFor(model => model.ConcurrencyKey)
                            <div class="row">
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    <div class="card card-default AppForm">
                                        <div class="card-body">
                                            <div class="row">
                                                <div class='col-sm-9'>
                                                    <div class='form-group'>
                                                        <label class="pr-3">@Html.LabelFor(model => model.AssociatedEmailTemplateTypeID) <span class="text-danger-reg">*</span></label>
                                                        @if (!Model.associatedemailtemplatetype.IsDefault)
                                                        {
                                                            <div class="input-group" style="width: 35%;">
                                                                @Html.DropDownList("AssociatedEmailTemplateTypeID", null, "-- Select --", new { @required = "required", @class = "chosen-select form-control", @HostingName = "EmailTemplate", @dataurl = Url.Action("GetAllValue", "EmailTemplate", new { caller = "AssociatedEmailTemplateTypeID" }) })
                                                                @Html.ValidationMessageFor(model => model.AssociatedEmailTemplateTypeID)
                                                            </div>
                                                        }
                                                        else
                                                        {
                                                            @Html.HiddenFor(model => model.AssociatedEmailTemplateTypeID);
                                                            @Html.DisplayFor(model => model.associatedemailtemplatetype.DisplayValue);
                                                        }
                                                    </div>
                                                </div>
                                                <div class="col-md-12 col-sm-12 col-sx-12">
                                                    <div class="card card-default">
                                                        <div class="card-heading clearfix" style="margin:0px; padding:8px;">
                                                            Email Subject
                                                        </div>
                                                        <div class="card-body" style="margin:0px; padding:8px;">
                                                            @Html.TextAreaFor(model => model.EmailSubject, new { @class = "form-control" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-12 col-sm-12 col-sx-12">
                                                    <div class="card card-default">
                                                        <div class="card-heading clearfix" style="margin:0px; padding:8px;">
                                                            Email Content
                                                        </div>
                                                        <div class="card-body" style="margin:0px; padding:8px;">
                                                            @Html.TextAreaFor(model => model.EmailContent, new { @id = "summernote",@class="form-control" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
    <a href="@Url.Action("Index","EmailTemplate")" class="btn btn-secondary">Cancel</a>
    if (User.CanEditAdminFeature("ApplicationConfiguration"))
    {
        <input type="submit" value="Save" class="btn btn-primary" />
    }
}
@Scripts.Render("~/bundles/jqueryval")
@Styles.Render("~/Content/fontawesome")
<link href='@Url.Content("~/Scripts/summernote.css")' rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/summernote.js")" type="text/javascript"></script>
<script type='text/javascript'>$(document).ready(function () { $('#summernote').summernote(); });</script>
