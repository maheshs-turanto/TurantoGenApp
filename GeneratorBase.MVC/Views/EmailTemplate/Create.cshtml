@model GeneratorBase.MVC.Models.EmailTemplate
@{
    ViewBag.Title = "Create Email Template";
}
<link href='@Url.Content("~/Scripts/summernote.css")' rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/summernote.js")" type="text/javascript"></script>
<script type="text/javascript">
    function initHtmlEditor() {
        $('#summernote').summernote();
    }
    $(document).ready(function () {
        initHtmlEditor();
    });
</script>
<div class="content-heading">
    <div class="col-lg-12">
        <strong>            
                 Email Template  
             <small> Add </small>
           </strong>
    </div>
    <!-- /.col-lg-12 -->
</div>
@using (Html.BeginForm("Create", "EmailTemplate", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken();
                            Html.ValidationSummary(true);
                            Html.EnableClientValidation();

                            <div class="card">
                                <div class="card-body">
                                    <div class='col-sm-12'>
                                        <div class='form-group'>
                                            <label>@Html.LabelFor(model => model.AssociatedEmailTemplateTypeID) <span class="text-danger-reg">*</span></label>
                                        </div>
                                        <div class='form-group'>
                                            <div class="input-group">
                                                @Html.DropDownList("AssociatedEmailTemplateTypeID", null, "-- Select --", new { @required = "required", @class = " form-control", @HostingName = "EmailTemplate", @dataurl = Url.Action("GetAllValue", "EmailTemplate", new { caller = "AssociatedEmailTemplateTypeID" }) })
                                                @Html.ValidationMessageFor(model => model.AssociatedEmailTemplateTypeID)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-sx-12">
                                        <div class="form-group">
                                            <label>  Email Content</label>
                                        </div>
                                        <div class="form-group">
                                            @Html.TextAreaFor(model => model.EmailContent, new { @id = "summernote" })
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <a href="@Url.Action("Index","EmailTemplate")" class="btn btn-secondary">Cancel</a>
                            <input type="submit" value="Create" class="btn btn-primary" />
}
<script src="@Url.Content("~/Scripts/summernote.js")" type="text/javascript"></script>
