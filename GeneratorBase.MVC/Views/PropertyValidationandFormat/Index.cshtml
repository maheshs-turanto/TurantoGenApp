@model IEnumerable<GeneratorBase.MVC.Models.PropertyValidationandFormat>
@{
    ViewBag.Title = "Property Validation, Masking and Format List";
    string templatename = ("~/Views/PropertyValidationandFormat/" + ViewBag.TemplatesName + ".cshtml").Replace("?IsAddPop=true", "");
    var EntityDisplayName = "Property Validation, Masking and Format";
}
<div class="content-heading">
    <div class=" col-lg-10">
    <strong>
        <a href="@Url.Action("Index", "Admin")"> Admin</a>  <a href="@Url.Action("Index")"> @EntityDisplayName</a>
        <small>List</small>
    </strong>
</div>
    <div class="col-lg-2">
    </div>
</div>
<script>
    $(document).ready(function () {
        ClickFilterBtn();
    });
</script>
<div class="">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div id="dvPropertyValidationandFormatFilter"></div>
                    @Html.Partial(templatename, Model)
                </div>
            </div>
            <div class="card ButtonFooter">
                <div class="card-footer container-fluid">
                    <input id="btnapply" type="button" onclick=@Html.Raw("disable(this);NavigateToUrl('" + Url.Action("ApplySettings", "PropertyValidationandFormat", new { IsReset = false }) + "');") value="Apply Settings" class="btn btn-primary" alt="Apply" title="Apply" />
                    <input id="btnreset" type="button" onclick=@Html.Raw("NavigateToUrl('" + Url.Action("ApplySettings", "PropertyValidationandFormat", new { IsReset = true }) + "');") value="Reset Settings" class="btn btn-primary" alt="Reset" title="Reset" />
                </div>
            </div>
        </div>
            </div>
        </div>
<script>
    function disable(obj)
    {
        $('#btnapply').attr('disabled', 'disabled');
        $('#btnreset').attr('disabled', 'disabled');
        $(obj).attr('value', 'Please Wait...');
    }
</script>
