           - @Html.DisplayFor(model => model.t_menuitemmenuitemassociation.DisplayValue)
			 @Html.HiddenFor(model => model.T_MenuItemMenuItemAssociationID)
        </dd>
		  <dt>		   
            @Html.DisplayNameFor(model => model.T_Entity)
        </dt>
		<dd class="clearfix">
           - @Html.DisplayFor(model => model.T_Entity)
			@Html.HiddenFor(model => model.T_Entity)
        </dd>
		  <dt>		   
            @Html.DisplayNameFor(model => model.T_Action)
        </dt>
		<dd class="clearfix">
           - @Html.DisplayFor(model => model.T_Action)
			@Html.HiddenFor(model => model.T_Action)
        </dd>
