        </dd>
		  <dt>		   
            @Html.DisplayNameFor(model => model.T_ClassIcon)
        </dt>
		<dd class="clearfix">
           - @Html.DisplayFor(model => model.T_ClassIcon)
			@Html.HiddenFor(model => model.T_ClassIcon)
        </dd>
		  <dt>		   
            @Html.DisplayNameFor(model => model.T_AutoNo)
        </dt>
		<dd class="clearfix">
           - @Html.DisplayFor(model => model.T_AutoNo)
			@Html.HiddenFor(model => model.T_AutoNo)
        </dd>
		  <dt>		   
            @Html.DisplayNameFor(model => model.T_Name)
        </dt>
		<dd class="clearfix">
           - @Html.DisplayFor(model => model.T_Name)
			@Html.HiddenFor(model => model.T_Name)
        </dd>
		  <dt>		   
            @Html.DisplayNameFor(model => model.T_ToolTip)
        </dt>
		<dd class="clearfix">
           - @Html.DisplayFor(model => model.T_ToolTip)
			@Html.HiddenFor(model => model.T_ToolTip)
        </dd>
		 <dt>
            @Html.DisplayNameFor(model => model.T_MenuItemMenuItemAssociationID)
        </dt>
