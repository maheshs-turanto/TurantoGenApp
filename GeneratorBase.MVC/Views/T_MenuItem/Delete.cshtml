            @Html.DisplayNameFor(model => model.T_LinkAddress)
        </dt>
		<dd class="clearfix">
           - @Html.DisplayFor(model => model.T_LinkAddress)
			@Html.HiddenFor(model => model.T_LinkAddress)
        </dd>
    </dl>

	  </div>	
                </div>	
            </div>	
        </div>
	<br/>
        <div class="row deletefix">
		<div class="col-md-12 col-sm-12 col-xs-12">
         <a class="btn btn-default btn-sm" Onclick="goBack('@Url.Action("Index","T_MenuItem")');">Back</a>
 
	@if ( User.CanDelete("T_MenuItem") && User.CanDeleteItemInHierarchy("T_MenuItem", Model, User))
     {
			<input type="submit" value="Delete" class="btn btn-primary btn-sm" /> 
	}
        </div>
            </div>
    }
</div>

<script>
    $("input[type='submit']").click(function (event) {
        var returnvalue = true;
        var alertmsg = "";
        if (alertmsg.length > 0)
            OpenAlertPopUp("Warning!", alertmsg);
        return returnvalue;
    });
</script>

 
