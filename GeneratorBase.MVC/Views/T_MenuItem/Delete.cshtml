                <div class="card-body">
    <dl class="dl-horizontal">
		  <dt>		   
            @Html.DisplayNameFor(model => model.T_DisplayOrder)
        </dt>
		<dd class="clearfix">
           - @Html.DisplayFor(model => model.T_DisplayOrder)
