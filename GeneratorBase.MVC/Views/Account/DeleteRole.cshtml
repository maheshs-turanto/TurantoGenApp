@model GeneratorBase.MVC.Models.EditRoleViewModel
@{
    ViewBag.Title = "Delete";
    var commonObj = GeneratorBase.MVC.Models.CommonFunction.Instance;
    var appTheme = commonObj.getAppThemeName();
}

@if (appTheme == "Default")
{

    <div class="content-heading">
        <div class="col-lg-10">

            <strong>
                <a href="@Url.Action("Index")"> Admin</a>
                <small>
                    Delete role @Html.DisplayFor(model => model.Name)
                </small>
            </strong>
        </div>
        <div class="col-lg-2">
        </div>
    </div>
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="card AppForm">
                <div class="card-header bg-danger text-white clearfix">
                    <h6>Are you sure you want to delete this role? - <strong>@Model.Name</strong></h6>                    
                </div>
                <div class="card-body">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="clearfix">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            @Html.ActionLink("Back to List", "RoleList", null, new { @class = "btn btn-secondary" })
            @if (User.CanDeleteAdminFeature("Role"))
            {
                <input type="submit" value="Delete" class="btn btn-primary" />
            }
        </div>
    }
</div>
}
