                <td>@Html.LabelFor(model => model.T_Description)</td>
 <td>@Html.TextAreaFor(model => model.T_Description, new { @class = "form-control" })</td></tr>
<tr>
                <td align="center"><input type="checkbox" name="chkUpdate" value="T_DocumentType" /></td>
                <td>@Html.LabelFor(model => model.T_DocumentType)</td>
				<td> @Html.TextBoxFor(model => model.T_DocumentType, new { @class = "form-control" })</td></tr>
<tr>
                <td align="center"><input type="checkbox" name="chkUpdate" value="T_AttachDocumentTo" /></td>
                <td>@Html.LabelFor(model => model.T_AttachDocumentTo)</td>
				<td> @Html.TextBoxFor(model => model.T_AttachDocumentTo, new { @class = "form-control" })</td></tr>
<tr>
                <td align="center"><input type="checkbox" name="chkUpdate" value="T_BackGroundColor" /></td>
                <td>@Html.LabelFor(model => model.T_BackGroundColor)</td>
				<td> @Html.TextBoxFor(model => model.T_BackGroundColor, new { @class = "form-control" })</td></tr>
<tr>
                <td align="center"><input type="checkbox" name="chkUpdate" value="T_FontColor" /></td>
                <td>@Html.LabelFor(model => model.T_FontColor)</td>
				<td> @Html.TextBoxFor(model => model.T_FontColor, new { @class = "form-control" })</td></tr>
                        </thead>
                    </table>

 </div>
  </div>
   </div>
   <button id="CancelQuickAdd" type="button" class="btn btn-default btn-sm" data-dismiss="modal" aria-hidden="true">Cancel</button>
    if (ViewBag.IsDDAdd == null && User.CanEdit("T_DocumentTemplate"))
    {
        <input type="submit" value="Update" class="btn btn-primary btn-sm" />
    }
    <br /><br />
	}
<script src="~/Scripts/Common3/chosen.jquery.js" type="text/javascript"></script>
