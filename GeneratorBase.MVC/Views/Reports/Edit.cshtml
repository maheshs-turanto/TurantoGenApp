@model GeneratorBase.MVC.Models.ReportsInRole
@{
    ViewBag.Title = "Assign Roles For Report";
    Layout = null;
}
<link href="@Url.Content("~/Content/bootstrap-multiselect.css")" rel="stylesheet" type="text/css" />
<style>
   
    #Lnk_Print {
        display: none !important;
    }
</style>

@using (Html.BeginForm("Edit", "Reports", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken();
    Html.ValidationSummary(true);
    Html.EnableClientValidation();
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.ReportId)
    <div class="row">
        <div class="col-sm-12 col-md-12 col-sx-12" style="margin-bottom:20px;">
            
                <h4 class="panel-heading clearfix" style="margin:-10px 0px 8px 0px; padding:4px 0px;">
                    Assign Roles For Report
                </h4>
                
                    @if (ViewBag.RoleId != null)
                    {
                        foreach (var chkitem in ViewBag.RoleId as Dictionary<string, string>)
                        {
                         
                            <div class='col-sm-12 col-md-12 col-xs-12 checkbox' style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis; padding-left:0px;" title="@chkitem.Value">
                                <label style="margin-bottom:0px;">
                                    <input type="checkbox" name="SelectedRoleId" class="tcheckbox" value="@chkitem.Key" @((Model.SelectedRoleId != null) ? Model.SelectedRoleId.Contains(chkitem.Key) ? "checked" : "" : "") /> 
                                    <span style="font-size:16px"> @chkitem.Value </span>
                                </label>
                                
                            </div>
                        }
                    }
               
            </div>
        
    </div>
    <button id="CancelQuickAdd" type="button" class="btn btn-default btn-sm" data-dismiss="modal" aria-hidden="true">Cancel</button>
    <input type="submit" value="Save" class="btn btn-primary btn-sm" onclick="QuickAddFromIndex(event,true,'ReportList','null','null',0);" />
}
@Scripts.Render("~/bundles/jqueryval")
<script src="@Url.Content("~/Scripts/Common2/bootstrap-multiselect.js")" type="text/javascript"></script>
<script>
    $(document).ready(function () {
        $('#RoleId').multiselect({
            buttonWidth: '100%'
        });
    });
</script>

