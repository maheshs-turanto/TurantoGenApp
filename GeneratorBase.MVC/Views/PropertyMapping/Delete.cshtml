@model GeneratorBase.MVC.Models.PropertyMapping
@{
    ViewBag.Title = "Delete Property Mapping";
}
<div class="content-heading">
    <div class="col-lg-10">
        <strong>
            <a href="">Delete Property Mapping </a> 
            <small>@Html.DisplayFor(model => model.DisplayValue)</small>
        </strong>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="col-md-12 col-sm-12 col-xs-12">
    <label id="ErrMsg" class="text-primary small" style="color:red; vertical-align:middle; font-weight:100;"></label>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ConcurrencyKey)
        @Html.HiddenFor(model => model.Id)
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="card AppForm">
                    <div class="card-header text-white bg-danger clearfix">
                        <h6>Are you sure you want to delete this? - <strong>@Html.DisplayFor(model => model.DisplayValue)</strong> </h6>
                    </div>
                    <div class="card-body">
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.PropertyName)
                            </dt>
                            <dd class="clearfix">
                                @Html.DisplayFor(model => model.PropertyName)
                                @Html.HiddenFor(model => model.PropertyName)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.DataName)
                            </dt>
                            <dd class="clearfix">
                                @Html.DisplayFor(model => model.DataName)
                                @Html.HiddenFor(model => model.DataName)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.DataSource)
                            </dt>
                            <dd class="clearfix">
                                @Html.DisplayFor(model => model.DataSource)
                                @Html.HiddenFor(model => model.DataSource)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.SourceType)
                            </dt>
                            <dd class="clearfix">
                                @Html.DisplayFor(model => model.SourceType)
                                @Html.HiddenFor(model => model.SourceType)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.MethodType)
                            </dt>
                            <dd class="clearfix">
                                @Html.DisplayFor(model => model.MethodType)
                                @Html.HiddenFor(model => model.MethodType)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Action)
                            </dt>
                            <dd class="clearfix">
                                @Html.DisplayFor(model => model.Action)
                                @Html.HiddenFor(model => model.Action)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.EntityPropertyMappingID)
                            </dt>
                            <dd class="clearfix">
                                @Html.DisplayFor(model => model.entitypropertymapping.DisplayValue)
                                @Html.HiddenFor(model => model.EntityPropertyMappingID)
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div class="row deletefix">
            <div class="col-md-12 col-sm-12 col-xs-12">
                @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-default btn-sm" })

                @if (User.CanDelete("PropertyMapping"))
                {
                    <input type="submit" value="Delete" class="btn btn-primary btn-sm" />
                }
            </div>
        </div>
    }
</div>

