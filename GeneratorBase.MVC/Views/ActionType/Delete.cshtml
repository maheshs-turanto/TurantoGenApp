@model GeneratorBase.MVC.Models.ActionType
@{
    ViewBag.Title = "Delete Action Type";
}
<div class="content-heading">
    <div class="col-lg-10">
        <strong>
            Delete Action Type
            <small>@Html.DisplayFor(model => model.DisplayValue)</small>
        </strong>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="card card-default AppForm">
                <div class="card-header text-white bg-danger clearfix">
                    <h6>Are you sure you want to delete this? </h6>
                </div>
                <div class="card-body">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.TypeNo)
                        </dt>
                        <dd class="clearfix">
                            @Html.DisplayFor(model => model.TypeNo)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.ActionTypeName)
                        </dt>
                        <dd class="clearfix">
                            @Html.DisplayFor(model => model.ActionTypeName)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>
                        <dd class="clearfix">
                            @Html.DisplayFor(model => model.Description)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Template)
                        </dt>
                        <dd class="clearfix">
                            @Html.DisplayFor(model => model.Template)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
    <br />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default btn-sm" })
                <input type="submit" value="Delete" class="btn btn-primary btn-sm" />
            </div>
        </div>
    }
</div>

