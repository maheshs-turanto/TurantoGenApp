@model GeneratorBase.MVC.Models.Permission
@{
    ViewBag.Title = "Delete";
}
<div class="content-heading">
    <div class="col-lg-10">
        <strong>
            Delete
            <small>Permission</small>
        </strong>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="card AppForm">
                <div class="card-header text-white bg-danger clearfix">
                    <h6>Are you sure you want to delete this? - <strong>@Html.DisplayFor(model => model.EntityName)</strong> </h6>
                </div>
                <div class="card-body">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.EntityName)
                        </dt>
                        <dd class="clearfix">
                            @Html.DisplayFor(model => model.EntityName)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.RoleName)
                        </dt>
                        <dd class="clearfix">
                            @Html.DisplayFor(model => model.RoleName)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.CanEdit)
                        </dt>
                        <dd class="clearfix">
                            @Html.DisplayFor(model => model.CanEdit)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.CanDelete)
                        </dt>
                        <dd class="clearfix">
                            @Html.DisplayFor(model => model.CanDelete)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.CanView)
                        </dt>
                        <dd class="clearfix">
                            @Html.DisplayFor(model => model.CanView)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.CanAdd)
                        </dt>
                        <dd class="clearfix">
                            @Html.DisplayFor(model => model.CanAdd)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default btn-sm" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>

