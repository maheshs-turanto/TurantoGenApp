@model GeneratorBase.MVC.Models.T_Chart
@{
    ViewBag.Title = "Delete Application Chart";
    Layout = null;
}

    @using (Html.BeginForm("DeleteConfirmed", "Chart", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ConcurrencyKey)
        @Html.HiddenFor(model => model.Id)
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="card card-default AppForm">
                    <div class="card-header text-white bg-danger clearfix">
                        <h6>Are you sure you want to delete application chart - <strong>@Html.DisplayFor(model => model.EntityName)</strong></h6>
                    </div>
                    <div class="card-body">
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.EntityName)
                            </dt>
                            <dd class="clearfix">
                                @Html.DisplayFor(model => model.EntityName)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.ChartTitle)
                            </dt>
                            <dd class="clearfix">
                                @Html.DisplayFor(model => model.ChartTitle)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.ChartType)
                            </dt>
                            <dd class="clearfix">
                                @Html.DisplayFor(model => model.ChartType)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.XAxis)
                            </dt>
                            <dd class="clearfix">
                                @Html.DisplayFor(model => model.XAxis)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.YAxis)
                            </dt>
                            <dd class="clearfix">
                                @Html.DisplayFor(model => model.YAxis)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.ShowInDashBoard)
                            </dt>
                            <dd class="clearfix">
                                @Html.DisplayFor(model => model.ShowInDashBoard)
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div class="row deletefix">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <button id="CancelQuickAdd" type="button" class="btn btn-default btn-sm" data-dismiss="modal" aria-hidden="true">Cancel</button>
                <input type="submit" value="Delete" class="btn btn-primary btn-sm" onclick="QuickAddFromIndex(event,true,'T_Chart','null','null',0);" />
            </div>
        </div>
    }






