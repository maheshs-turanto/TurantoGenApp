@model PagedList.IPagedList<GeneratorBase.MVC.Models.ReportList>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = null;
    Response.ContentType = "application/vnd.ms-excel";
    Response.AddHeader("Content-Disposition", "attachment; filename=\"SSRS Report.xls\"");
}
                    <table>
                            <tr>
@if(User.CanView("ReportList","ReportNo"))
{
		<th>Report No</th>
}
@if(User.CanView("ReportList","DisplayName"))
{
		<th>Display Name</th>
}
@if(User.CanView("ReportList","Description"))
{
		<th>Description</th>
}
@if(User.CanView("ReportList","ReportsGroupSSRSReportAssociationID"))
{
		<th  @(Convert.ToString(ViewData["HostingEntity"]) == "ReportsGroup"?"hidden":"")>Group</th>
}
