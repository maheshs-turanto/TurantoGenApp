@model GeneratorBase.MVC.Models.ReportList
@{
    ViewBag.Title = "Delete SSRS Report";
}
<div class="content-heading">
    <div class="col-lg-10">
        <strong>
            SSRS Report
            <small>Delete - @Html.DisplayFor(model => model.DisplayValue)</small>
        </strong>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="col-md-12 col-sm-12 col-xs-12">
    <label id="ErrMsg" class="text-primary small" style="color:red; vertical-align:middle; font-weight:100;"></label>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ConcurrencyKey)
        @Html.HiddenFor(model => model.Id)

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="card AppForm">
                    <div class="card-header text-white bg-danger clearfix">
                        <h6>Are you sure you want to delete this? - <strong>@Html.DisplayFor(model => model.DisplayValue)</strong> </h6>
                    </div>
                    <div class="card-body">
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.ReportNo)
                            </dt>
                            <dd class="clearfix">
                                @Html.DisplayFor(model => model.ReportNo)
                                @Html.HiddenFor(model => model.ReportNo)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.DisplayName)
                            </dt>
                            <dd class="clearfix">
                                @Html.DisplayFor(model => model.DisplayName)
                                @Html.HiddenFor(model => model.DisplayName)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Description)
                            </dt>
                            <dd class="clearfix">
                                @Html.DisplayFor(model => model.Description)
                                @Html.HiddenFor(model => model.Description)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.ReportsGroupSSRSReportAssociationID)
                            </dt>
                            <dd class="clearfix">
                                @Html.DisplayFor(model => model.reportsgroupssrsreportassociation.DisplayValue)
                                @Html.HiddenFor(model => model.ReportsGroupSSRSReportAssociationID)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Name)
                            </dt>
                            <dd class="clearfix">
                                @Html.DisplayFor(model => model.Name)
                                @Html.HiddenFor(model => model.Name)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.ReportID)
                            </dt>
                            <dd class="clearfix">
                                @Html.DisplayFor(model => model.ReportID)
                                @Html.HiddenFor(model => model.ReportID)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.ReportPath)
                            </dt>
                            <dd class="clearfix">
                                @Html.DisplayFor(model => model.ReportPath)
                                @Html.HiddenFor(model => model.ReportPath)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.IsHidden)
                            </dt>
                            <dd class="clearfix">
                                @Html.DisplayFor(model => model.IsHidden)
                                @Html.HiddenFor(model => model.IsHidden)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.EntityName)
                            </dt>
                            <dd class="clearfix">
                                @Html.DisplayFor(model => model.EntityName)
                                @Html.HiddenFor(model => model.EntityName)
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div class="row deletefix">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <a class="btn btn-secondary" onclick="goBack('@Url.Action("Index","ReportList")');">Back</a>
                @*@Html.ActionLink("Back", "Index", null, new { @class = "btn btn-secondary btn-sm" })*@

                @if (User.CanDelete("ReportList"))
                {
                    <input type="submit" value="Delete" class="btn btn-primary btn-sm" />
                }
            </div>
        </div>
    }
</div>

