@model GeneratorBase.MVC.Models.RuleAction
@{
    ViewBag.Title = "Delete Rule Action";
}

<div class="content-heading">
    <div class="col-lg-10">
        <strong>
            Delete Rule Action
            <small>Delete - @Html.DisplayFor(model => model.DisplayValue)</small>
        </strong>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="card AppForm">
                <div class="card-header text-white bg-danger clearfix">
                    <h6>Are you sure you want to delete this? - <strong>@Html.DisplayFor(model => model.DisplayValue)</strong> </h6>
                </div>
                <div class="card-body">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.ActionName)
                        </dt>
                        <dd class="clearfix">
                            @Html.DisplayFor(model => model.ActionName)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.ErrorMessage)
                        </dt>
                        <dd class="clearfix">
                            @Html.DisplayFor(model => model.ErrorMessage)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.RuleActionID)
                        </dt>
                        <dd class="clearfix">
                            @Html.DisplayFor(model => model.ruleaction.DisplayValue)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.AssociatedActionTypeID)
                        </dt>
                        <dd class="clearfix">
                            @Html.DisplayFor(model => model.associatedactiontype.DisplayValue)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
    <br />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                @Html.ActionLink("Back to List", "Edit", "BusinessRule", new { Id = Model.RuleActionID }, new { @class = "btn btn-default btn-sm" })
                <input type="submit" value="Delete" class="btn btn-primary btn-sm" />
            </div>
        </div>
    }
</div>

