@model GeneratorBase.MVC.Models.FileDocument
@{
    ViewBag.Title = "Delete Document";
}
<div class="content-heading">
    <div class="col-lg-10">
      <strong> 	  
		Document         
		<small>Delete - @Html.DisplayFor(model => model.DisplayValue)</small>
      </strong>
    </div>
    <div class="col-lg-2">
    </div>
</div>

				<div>
               
 </div>
	<div class="col-md-12 col-sm-12 col-xs-12">
<label id="ErrMsg" style="color:brown;vertical-align:middle;font-size:90%;"></label>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ConcurrencyKey)
    @Html.HiddenFor(model => model.Id)
	                                  
	<div class="row">	
        <div class="col-md-12 col-sm-12 col-xs-12">	
            <div class="card AppForm">	
                <div class="card-header text-white bg-danger clearfix">	
                    <h6>Are you sure you want to delete this? - <strong>@Html.DisplayFor(model => model.DisplayValue)</strong> </h6>	
                </div>	
                <div class="card-body">
    <dl class="dl-horizontal">
		  <dt>		   
            @Html.DisplayNameFor(model => model.DocumentName)
        </dt>
		<dd class="clearfix">
           - @Html.DisplayFor(model => model.DocumentName)
			@Html.HiddenFor(model => model.DocumentName)
        </dd>
		  <dt>		   
            @Html.DisplayNameFor(model => model.Description)
        </dt>
		<dd class="clearfix">
           - @Html.DisplayFor(model => model.Description)
			@Html.HiddenFor(model => model.Description)
        </dd>
		  <dt>		   
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>
		<dd class="clearfix">
           - @Html.DisplayFor(model => model.DateCreated)
			@Html.HiddenFor(model => model.DateCreated)
        </dd>
		  <dt>		   
            @Html.DisplayNameFor(model => model.DateLastUpdated)
        </dt>
		<dd class="clearfix">
           - @Html.DisplayFor(model => model.DateLastUpdated)
			@Html.HiddenFor(model => model.DateLastUpdated)
        </dd>
    </dl>

	  </div>	
                </div>	
            </div>	
        </div>
	<br/>
        <div class="row deletefix">
		<div class="col-md-12 col-sm-12 col-xs-12">
         <a class="btn btn-default btn-sm" Onclick="goBack('@Url.Action("Index","FileDocument")');">Back</a>
 
	@if ( User.CanDelete("FileDocument") && User.CanDeleteItemInHierarchy("FileDocument", Model, User))
     {
			<input type="submit" value="Delete" class="btn btn-primary btn-sm" /> 
	}
        </div>
            </div>
    }
</div>

<script>
    $("input[type='submit']").click(function (event) {
        var returnvalue = true;
        var alertmsg = "";
        if (alertmsg.length > 0)
            OpenAlertPopUp("Warning!", alertmsg);
        return returnvalue;
    });
</script>

 
