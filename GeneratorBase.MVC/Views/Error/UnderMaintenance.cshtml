@using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
{
    @Html.AntiForgeryToken()
    <button style="background:transparent; border:1px solid white; border-radius:12px; color:white; padding:5px 28px; font-size:14px; font-weight:normal; position:absolute; top:10px; right:10px" type="submit" id="logoutbtn"><i class="fa fa-sign-out"></i> Login as System Admin </button>
    <script>
    $(function () {
        $("#logoutbtn").click(function (e) {
            e.preventDefault();
            var _form = $("#logoutForm");
            var urlmain = '@Url.Action("LogOff", "Account")';
                $.ajax({
                    type: "POST",
                    url: urlmain,
                    dataType: "json",
                    data: _form.serialize(),
                    cache: false,
                    async: false,
                    complete: function (result) {
                        window.location.href = '@Url.Action("Login", "Account")';
                    }
                })
            });
        });
    </script>
}


